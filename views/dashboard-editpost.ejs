<%- include('partials/head.ejs') %>

<body>

  <%- include('partials/dashboard-navbar.ejs') %>


  <div class="dashboard-main-grid">
    <div class="dashboard-left-sidebar">
      <%- include('partials/dashboard-menu.ejs') %>
      <div class="test-class"></div>
    </div>

    <div class="dashboard-right-col">
      <div class="dashboard-greeting">
        <h3><span>Hello</span><%=email%></h3>
      </div>

      <div class="dashboard-heading">
        <h3><span>EDIT</span>POST</h3>
      </div>


      <%- include('partials/messages.ejs') %>

      <form action="/dashboard-editpost/" method="POST" enctype="multipart/form-data">
        <div class="form-grid-dashboard">
          <div class="dashboard-label form-label">
            <p>Post Title : </p>
          </div>
          <div class="dashboard-field">
            <input value="<%=title%>" name="post_title" id="post_title" type="text" class="form-input">
            <input id="postid" name="postid" type="hidden" value="<%=postid%>">
          </div>
          <div class="dashboard-label form-label">
            <p>Post Subject : </p>
          </div>
          <div class="dashboard-field">
            <select class="form-input" name="subject">
              <option name="fintech" value="fintech">FinTech</option>
              <option name="sport" value="sport">Sport</option>
              <option name="stockmarket" value="stockmarket">Stock Markets</option>
              <option name="cryptomarket" value="cryptomarket">Crypto Markets</option>
              <option name="other" value="other">Other</option>
            </select>
          </div>
          <div class="dashboard-label form-label">
            <p>Home Page Slot :</p>
          </div>
          <div class="dashboard-field">
            <% if (homepagepost !='yes') { %>
            <input class="radio-input" type="radio" id="homepage1" name="homepage" value="yes">
            <label for="homepage1">Yes</label>

            <input checked="true" class="radio-input" type="radio" id="homepage2" name="homepage" value="no">
            <label for="homepage2">No</label>
            <% } else { %>
            <input checked="true" class="radio-input" type="radio" id="homepage1" name="homepage" value="yes">
            <label for="homepage1">Yes</label>

            <input class="radio-input" type="radio" id="homepage2" name="homepage" value="no">
            <label for="homepage2">No</label>

            <% }%>
          </div>
          <div class="dashboard-label form-label">
            <p>Featured Post : </p>
          </div>
          <div class="dashboard-field">


            <% if (featuredpost !='yes') { %>
            <input class="radio-input" type="radio" id="featuredPost" name="featuredPost" value="yes">
            <label for="homepage1">Yes</label>
            <input checked="true " class="radio-input" type="radio" id="featuredPost" name="featuredPost" value="no">
            <label for="homepage2">No</label>
            <% } else { %>
            <input checked="true" class="radio-input" type="radio" id="featuredPost" name="featuredPost" value="yes">
            <label for="homepage1">Yes</label>
            <input class="radio-input" type="radio" id="featuredPost" name="featuredPost" value="no">
            <label for="homepage2">No</label>
            <% }%>
          </div>
          <div class="dashboard-label form-label">
            <p>Author : </p>
          </div>
          <div class="dashboard-field">
            <input value="<%=author%>" name="author" type="text" class="form-input">
          </div>
          <div class="textarea-label form-label">
            <p>Post Body : </p>
          </div>
          <div class="dashboard-field">
            <textarea name="postBody" class="form-input" cols="30" rows="18"><%=postbody%></textarea>
          </div>
          <div class="dashboard-label form-label">
          </div>
          <div class="dashboard-field">
            <input id="file-upload" name="post-image-upload" type='file' />
            <label for="file-upload" class="btn-dark upload-button">Upload Image</label>
            <p id="file-path-value"></p>
          </div>
          <div class="dashboard-label form-label">
          </div>
          <div class="dashboard-field flex-btn">
            <button type="submit" class="btn-dark submit-btn flex-btn-margin">Update</button>
            <a class="btn-dark submit-btn" href="/delete-post/<%=postid%>">Delete</a>
          </div>
        </div>
      </form>
    </div>
  </div>
  </div>
  </div>

  <script src="/js/alerts.js"></script>
  <script src="/js/dashboard.js"></script>
  <script src="/js/inputUpdate.js"></script>
  <script src="https://kit.fontawesome.com/396c2cb1a5.js"></script>
</body>

</html>