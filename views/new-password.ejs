<%- include('partials/head.ejs') %>

<body>

  <%- include('partials/navigation.ejs') %>


  <div class="sign-in-grid">
    <div class="card login-card">
      <h3>Password Reset</h3>
      <p>Enter your the email address that you used to register. We'll send you an email with your username and a link
        to reset your password.</p>

      <%- include('partials/messages.ejs') %>
      <% if (message != '') { %>
      <div class="alert alert-failure"><%=message%><i class="close-btn far fa-window-close"></i></div>
      <% } %>
      <form action="/new-password" class="signin-form" method="POST">
        <input class="form-input" type="password" id="newpassword" name="newpassword"
          placeholder="Please enter a new password">
        <input id="userId" name="userId" type="hidden" value="<%=userId%>">
        <input class="form-input" type="password" id="newrepeatpassword" name="newrepeatpassword"
          placeholder="Please repeat your new password">
        <button type="submit" class="btn-dark">Reset Password</button>
      </form>
    </div>
    <div class="login-links">
      <a href="/signup">Create a new account</a>
      <a href="/reset-password">Forgot your password?</a>
    </div>
  </div>

  <%- include('partials/footer.ejs') %>

</body>

</html>