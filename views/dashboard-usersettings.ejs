<%- include('partials/head.ejs') %>

<body>

  <%- include('partials/dashboard-navbar.ejs') %>



  <div class="dashboard-main-grid">
    <div class="dashboard-left-sidebar">
      <%- include('partials/dashboard-menu.ejs') %>
    </div>
    <div class="dashboard-right-col">
      <div class="dashboard-greeting">
        <h3><span>Hello </span><%=email%></h3>
      </div>

      <div class="dashboard-heading">
        <h3><span>UPDATE</span>User Settings</h3>
      </div>

      <%- include('partials/messages.ejs') %>

      <form action="/dashboard-usersettings" method="POST" enctype="multipart/form-data">
        <div class="form-grid-dashboard">
          <div class="dashboard-label form-label">
            <p>First Name</p>
          </div>
          <div class="dashboard-field">
            <input value="<%=firstname%>" name="firstname" id="firstname" type="text" class="form-input">
          </div>
          <div class="dashboard-label form-label">
            <p>Last Name </p>
          </div>
          <div class="dashboard-field">
            <input autocomplete="off" value="<%=secondname%>" name="surname" id="surname" type="text"
              class="form-input">
          </div>
          <div class="dashboard-label form-label">
            <p>Password </p>
          </div>
          <div class="dashboard-field">
            <input placeholder="Enter a new password to update your password" name="password" type="text"
              class="form-input">
          </div>
          <div class="dashboard-label form-label">
            <p>Avatar</p>
          </div>
          <div class="dashboard-field avatar-field">
            <% if(image != null) { %>
            <img class="avatar-usersettings" src="<%=image%>" alt="">
            <% } else { %>
            <img class="avatar-usersettings" src="/img/placeholder-user.png" alt="">
            <% } %>
            <input class="avatar-btn" id="file-upload" name="post-image-upload" type='file' />
            <label for="file-upload" class="btn-dark upload-button-user">Upload Avatar</label>
            <p id="file-path-value"></p>
          </div>
          <div class="dashboard-label form-label">
            <p>Sign Up <br> Date</p>
          </div>
          <div class="dashboard-field">
            <p><%=signupdate%></p>
          </div>
          <div class="dashboard-label form-label">
          </div>
          <div class="dashboard-field">
            <button type="submit" class="btn-dark submit-btn">Update</button>
          </div>
        </div>
      </form>
    </div>
  </div>
  </div>

  <script src="/js/alerts.js"></script>
  <script src="/js/dashboard.js"></script>
  <script src="/js/inputUpdate.js"></script>
  <script src="https://kit.fontawesome.com/396c2cb1a5.js"></script>
</body>

</html>